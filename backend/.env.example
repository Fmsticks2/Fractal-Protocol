# Backend environment variables
# Copy this file to `.env` and adjust values as needed

# Runtime environment
NODE_ENV=development
PORT=3000

# CORS allowed origins (comma separated)
# For local Vite dev servers
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:5174

# Linera wallet GraphQL service
# Option A: System GraphQL (GraphiQL at http://localhost:8080/)
LINERA_GRAPHQL_URL=http://localhost:8080/graphql
# Option B: Application GraphQL (replace placeholders)
# LINERA_GRAPHQL_URL=http://localhost:8080/chains/<CHAIN_ID>/applications/<APP_ID>

# Postgres connection URL (optional for local dev)
# Example: postgres://user:password@host:5432/dbname
# DATABASE_URL=

# Rate limit configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=500

# Postgres pool tuning
PG_POOL_MAX=10
PG_IDLE_TIMEOUT_MS=30000
PG_CONN_TIMEOUT_MS=5000